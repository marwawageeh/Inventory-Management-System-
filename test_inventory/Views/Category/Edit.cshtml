@model test_inventory.Models.Category

@{
}

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 align-items-center my-5">
        <form asp-action="Edit" method="post">
            <h2>Edit Category</h2>

            <div class="form-group">
                <label asp-for="Name">Category Name:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span><!-- هنا بنعمل حقل لعرض رسائل الخطأ لو الاسم مش صحيح، مع تنسيق لونه أحمر -->
            </div>

            <div class="form-group">
                <label asp-for="Description">Description:</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span><!-- هنا بنعمل حقل لعرض رسائل الخطأ لو الاسم مش صحيح، مع تنسيق لونه أحمر -->
            </div>


            <br />
            <input type="submit" value="Edit" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
