@model Purchas
@{
}

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 align-items-center my-5">
        <div class="col-lg-6 mx-auto">
            <h2 class="text-center mb-4">Edit Purchase</h2>

            <form asp-action="Edit" method="post">
                <div class="mb-3">
                    <label asp-for="Id" class="form-label">Purchase ID</label>
                    <input asp-for="Id" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label for="ProductId" class="form-label">Product:</label>
                    <select asp-for="ProductId" class="form-select" required>
                        <option value="">-- Choose a product --</option> <!-- خيار افتراضي -->
                        @foreach (var item in ViewBag.pro)
                        {
                            <option value="@item.Id">@item.ProductName</option>
                        }
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label">Quantity</label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PurchaseDate" class="form-label">Purchase Date</label>
                    <input asp-for="PurchaseDate" type="date" class="form-control" />
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
