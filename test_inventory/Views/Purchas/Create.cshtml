@model Purchas
@{
}

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 align-items-center my-5">
        <div class="col-lg-6 mx-auto">
            <h2 class="text-center mb-4">Add Purchase</h2>

            <form action="/purchas/create" method="post">
                <!-- Quantity Input -->
                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label">Quantity:</label>
                    <input asp-for="Quantity" class="form-control" required />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <!-- Date Input -->
                <div class="mb-3">
                    <label asp-for="PurchaseDate" class="form-label">Date:</label>
                    <input asp-for="PurchaseDate" type="date" class="form-control" required />
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>

                <!-- Product Selection -->
                <div class="mb-3">
                    <label for="ProductId" class="form-label">Product:</label>
                <select asp-for="ProductId" class="form-select" required>
                    <option value="">-- Choose a product --</option>
                    @if (ViewBag.pro != null)
                    {
                        foreach (var item in ViewBag.pro)
                        {
                            <option value="@item.Id">@item.ProductName</option>
                        }
                    }
                    else
                    {
                        <option value="">No products available</option>
                    }
                </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>



                <!-- Product Selection -->
                <div class="mb-3">
                    <label for="SupplierId" class="form-label">Supplier:</label>
                    <select asp-for="SupplierId" class="form-select" required>
                        <option value="">-- Choose a supplier --</option>
                        @if (ViewBag.sup != null)
                        {
                            foreach (var item in ViewBag.sup)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                        else
                        {
                            <option value="">No suppliers available</option>
                        }
                    </select>

                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Scripts for Bootstrap and jQuery (if needed) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
