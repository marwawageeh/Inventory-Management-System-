@model List<Purchas>
@{
}

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 align-items-center my-5">
        <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

        <h2 class="text-center mb-4">Purchas List</h2>

        <div class="text-end mb-3">

            <a asp-action="Create" class="btn btn-primary">Create</a>
            <a asp-action="ExportToCsv" class="btn btn-success">Export Purchas to CSV</a>
        </div>
        
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Quantity</th>
                    <th>Date</th>
                    <th>Product</th>
                    <th>supplier</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="text-center">No data available</td>
                    </tr>
                }
                else
                {
                    foreach (var items in Model)
                    {
                        <tr>
                            <td>@items.Id</td>
                            <td>@items.Quantity</td>
                            <td>@items.PurchaseDate.ToShortDateString()</td> <!-- تنسيق التاريخ -->
                            <td>@items.ProductId</td>
                            <td>@items.SupplierId</td>
                            <td>
                                <a asp-action="Delete" asp-controller="Purchas" asp-route-id="@items.Id" onclick="return confirm('Are you sure?')" class="btn btn-danger">Delete</a>
                                <a asp-action="Edit" asp-controller="Purchas" asp-route-id="@items.Id" class="btn btn-info">Edit</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div>
