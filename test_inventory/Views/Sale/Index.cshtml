@model List<Sale>
@{
}
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 align-items-center my-5">
        <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

        <h2 class="text-center mb-4">Sale List</h2>

        <div class="text-end mb-3">

            <a asp-action="Createsalewithcustomer" class="btn btn-primary">Order</a>
            <a asp-action="Create" class="btn btn-primary">Create</a>
            <a asp-action="ExportToCsv" class="btn btn-success">Export sale to CSV</a>
        </div>

        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Quantity</th>
                    <th>Date</th>
                    <th>Product</th>
                    <th>Customer</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="text-center">No data available</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Quantity</td>
                            <td>@item.SaleDate.ToShortDateString()</td> <!-- Format date -->
                            <td>@item.ProductId</td>
                            <td>@item.CustomerId</td>
                            <td>
                                <a asp-action="Delete" asp-controller="Sale" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')" class="btn btn-danger">Delete</a>
                                <a asp-action="Edit" asp-controller="Sale" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div>
