@model List<Customer>
@{
}

<div class="container px-4 px-lg-5">

    <div class="row gx-4 gx-lg-5 align-items-center my-5">

        <h2 class="text-center mb-4">Customer List</h2>


        <div class="text-end mb-3">

             
            <a asp-action="ShowCreate" class="btn btn-primary">Create</a>
            <a asp-action="ExportToCsv" class="btn btn-success">Export Customers to CSV</a>
            
        </div>

        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Contact Info</th>
                    <th>Phone</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="text-center">No data available</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.ContactInfo</td>
                            <td>@item.Phone</td>
                            <td>
                               <a asp-action="Delete" asp-controller="Customer" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this customer?')" class="btn btn-danger">Delete</a>
                                <a asp-action="Edit" asp-controller="Customer" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                               
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div>

