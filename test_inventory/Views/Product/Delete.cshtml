@model Product
@{
}

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 align-items-center my-5">

        <h2 class="text-danger">Are you sure you want to delete product with ID: @Model.Id?</h2>
        <br />

        <div class="alert alert-warning" role="alert">
            This action cannot be undone. Please confirm that you want to delete this product.
        </div>

        <form asp-action="Delete" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>

        <br />
        <h4><a asp-action="Index" class="btn btn-link">Go to list</a></h4>
    </div>
</div>
