@model test_inventory.Models.Product

@{
}

<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 align-items-center my-5">
        <form asp-action="Edit" method="post">
            <h2>Edit Product</h2>

            <div class="form-group">
                <label asp-for="Id">Product ID</label>
                <input asp-for="Id" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="ProductName">Product Name</label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span><!-- هنا بنعمل حقل لعرض رسائل الخطأ لو الاسم مش صحيح، مع تنسيق لونه أحمر -->
            </div>

            <div class="form-group">
                <label asp-for="Quantity">Quantity</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <br />
            <input type="submit" value="Edit" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
