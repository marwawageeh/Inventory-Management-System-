<!-- Page Content -->
<div class="container px-4 px-lg-5">
    <!-- Heading Row -->
    <div class="row gx-4 gx-lg-12 align-items-center my-5">
        <div class="col-lg-12 position-relative">
            <!-- Adding the image -->
            <img class="img-fluid rounded shadow-sm" src="images/dress2 - Copy.jpg" alt="Featured Image" />

            <!-- Adding a transparent overlay -->
            <div class="overlay"></div>

            <!-- Text over the image -->
            <div class="text-overlay">
                <h1 class="text-white display-4">Welcome to Dress Store</h1>
                <p class="lead text-white-75">Efficiently manage your inventory with ease and professionalism.</p>
            </div>
        </div>
    </div>
</div>
<br />


<!-- Bootstrap core JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Core theme JS -->
<script src="js/scripts.js"></script>

<!-- Custom CSS for the overlay -->
<style>
    .position-relative {
        position: relative;
    }

    /* Transparent overlay */
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5); /* Dark color with transparency */
        z-index: 1;
    }

    /* Ensure the image covers the full width */
    img {
        width: 100%; /* Ensures the image covers the entire width */
        height: auto; /* Maintains aspect ratio */
    }

    /* Style for text over the image */
    .text-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        z-index: 2;
    }

        .text-overlay h1, .text-overlay p {
            color: white; /* White text on dark background */
        }

        .text-overlay h1 {
            font-size: 2.5rem; /* Larger font size */
            margin-bottom: 0.5rem;
        }

        .text-overlay p {
            font-size: 1.25rem; /* Smaller font size */
            opacity: 0.75; /* Semi-transparent text */
        }
</style>
